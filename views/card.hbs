<h1>Basket</h1>
<div id="card">
    {{#if courses.length}}
        <table>
            <thead>
            <tr>
                <th>Name</th>
                <th>Counter</th>
                <th>Action</th>
            </tr>
            </thead>
            <tbody>
            {{#each courses}}
                <tr>
                    <th>{{title}}</th>
                    <th>{{count}}</th>
                    <th>
                        <button class="btn btn-small js-remove" data-id="{{id}}" data-csrf="{{@root.csrf}}">Delete</button>
                    </th>
                </tr>
            {{/each}}
            </tbody>
        </table>

        <p>
            <strong>Price:</strong>
            <span class="price">{{price}}</span>
        </p>

        <form action="/orders" method="POST">
            <input type="hidden" name="_csrf" value="{{csrf}}">
            <button type="submit" class="btn">Order</button>
        </form>
    {{else}}
        BASKETS ZERO !!!
    {{/if}}
</div>